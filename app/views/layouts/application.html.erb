<!DOCTYPE html>
<html>
  <head>
    <title>Fatdaygo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
     <%if current_user %>
  <script>
  window.currentUser = {
    "id": <%= current_user.id%>,
    "firstname": "<%= current_user.firstname%>",
    "lastname": "<%= current_user.lastname%>",
    "email": "<%= current_user.email%>"
  };
  </script>
<%end%>
  <script>
    window.logoURL = "<%= image_url('logo.png') %>";
    window.heroURL = "<%= image_url('1.jpg') %>";
    window.infoURL = "<%= image_url('info.png') %>";
    window.sectionURL = "<%= image_url('section.png') %>";
    window.f1URL = "<%= image_url('pasta.png') %>";
    window.f2URL = "<%= image_url('cake.png') %>";
    window.f3URL = "<%= image_url('cocktail.png') %>";
    window.testURL = "<%= image_url('test.png') %>";
  </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
